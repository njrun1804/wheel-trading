# Local Development Configuration
# Copy to .env and fill in your values

# Trading Configuration
TRADING_MODE=paper              # paper, backtest, or live
LOG_LEVEL=INFO                  # DEBUG for more output

# Wheel Strategy Parameters
WHEEL_DELTA_TARGET=0.30         # Target delta for options (0.30 = 30 delta)
DAYS_TO_EXPIRY_TARGET=45        # Target days to expiration
MAX_POSITION_SIZE=0.20          # Max 20% of portfolio per position

# Broker API (Schwab) - Add when ready
# SCHWAB_APP_KEY=
# SCHWAB_SECRET=
# SCHWAB_REFRESH_TOKEN=

# Risk Management
MAX_MARGIN_PERCENT=0.50         # Max 50% margin usage
MAX_DRAWDOWN_PERCENT=0.20       # Max 20% drawdown trigger

# ML Features (Future)
USE_ML_ENHANCEMENT=false        # Enable ML predictions when available
ML_MODEL_PATH=./models/         # Path to trained models