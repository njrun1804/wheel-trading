{
  "mcpServers": {
    "fs": {
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "~"]
    },
    "github": {
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": { "GITHUB_TOKEN": "${GITHUB_TOKEN}" }
    },
    "web": {
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-web-search"]
    },
    "wiki": {
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "wikipedia-mcp"]
    }
  }
}
